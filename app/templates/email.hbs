{{#link-to "index"}}
	<a href="#" class="btn btn-info btn-lg back-button">
        <span class="glyphicon glyphicon-chevron-left"></span> Back
    </a>
{{/link-to}}

<a href="#" data-test="email-delete" class="btn btn-info btn-lg" onclick={{action "deleteEmail" model}}>
    <span class="glyphicon glyphicon-trash"></span> Trash 
</a>
<StarButton data-test="email-star" class="{{model.starred}} star" @starred={{model.starred}} @onClick={{action "star"}} />

<div class="content">
	<h2 data-test="email-from">From : {{model.from}}</h2>
	<h2 data-test="email-to">To : {{model.to}}</h2>
	<h1 data-test="email-subject">Subject: {{model.subject}}</h1>
	<p data-test="email-message">{{model.message}}</p>
</div>